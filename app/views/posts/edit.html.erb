<div class="card my-5">
  <div class="card-body">
    <h1>Editing post</h1>

    <%= render "form", post: @post %>

    <div class="mt-2">
      <%= link_to "Show this post", @post, class: 'btn btn-info mr-2' %> |
      <%= link_to 'Destroy', @post, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger mr-2' %> |
      <%= link_to "Back to posts", posts_path, class: 'btn btn-light' %>
    </div>
  </div>  
</div>
