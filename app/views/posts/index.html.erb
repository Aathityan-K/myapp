<h1 class="text-decoration-underline text-center">Posts</h1>

<%= link_to 'Create New Post', new_post_path, class: 'btn btn-primary' %>
<hr>
<% @posts.each do |post| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= link_to post.title, post_path(post) %> by <%= post.user.username %></h5>
      <p class="card-text"><%= truncate(post.content, length: 60) %></p>
      <p><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></p>
    </div>
  </div>
<% end %>